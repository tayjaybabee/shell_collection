#!/bin/bash

terms="${@}"
echo "###########################################################"
echo "                         RESULTS                           "
echo "###########################################################"
echo "═══════════════════════════════════════════════════════════"
echo "                           APT                             "
echo "═══════════════════════════════════════════════════════════"
apt search $terms
echo "═══════════════════════════════════════════════════════════"
echo "                           NPM                             "
echo "═══════════════════════════════════════════════════════════"
npm search $terms -l
echo "═══════════════════════════════════════════════════════════"
echo "                           GEM                             "
echo "═══════════════════════════════════════════════════════════"
gem search $1 --details
echo "═══════════════════════════════════════════════════════════"
echo "                           PIP                             "
echo "═══════════════════════════════════════════════════════════"
pip3 search $terms
echo "═══════════════════════════════════════════════════════════"
echo "                          CARGO                            "
echo "═══════════════════════════════════════════════════════════"
cargo search $terms
